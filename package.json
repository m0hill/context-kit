{
  "name": "context-kit",
  "displayName": "Context Kit",
  "description": "Efficiently manage and copy file context for AI assistants with an intuitive tree view",
  "version": "1.0.1",
  "publisher": "MohilGarg",
  "author": {
    "name": "Mohil"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/m0hill/context-kit"
  },
  "bugs": {
    "url": "https://github.com/m0hill/context-kit/issues"
  },
  "icon": "media/icon.png",
  "keywords": [
    "ai",
    "context",
    "clipboard",
    "llm",
    "assistant",
    "copilot",
    "files",
    "tree",
    "productivity"
  ],
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "contextKit",
          "title": "Context Kit",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "contextKit": [
        {
          "type": "webview",
          "id": "contextKitView",
          "name": "Context Kit",
          "icon": "media/icon.svg",
          "retainContextWhenHidden": true
        }
      ]
    },
    "commands": [
      {
        "command": "context-kit.openPanel",
        "title": "Open Context Kit"
      },
      {
        "command": "context-kit.copyContext",
        "title": "Copy Context Selection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "format": "biome check --write .",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "ignore": "^7.0.5"
  }
}
